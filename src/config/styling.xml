<?xml version="1.0" encoding="UTF-8"?>
<!--
    Styling configuration for Caves of Chaos RPG.
    Define font and color settings here for easy maintenance and consistency.
-->
<styling>
    <!-- Font settings -->
    <fonts>
        <!-- Default font for general UI -->
        <font name="default" family="Consolas" size="16" style="plain"/>
        
        <!-- Status panel fonts -->
        <font name="statusTitle" family="SansSerif" size="16" style="bold"/>
        <font name="statusNormal" family="SansSerif" size="14" style="plain"/>
        
        <!-- Log panel font -->
        <font name="log" family="Monospaced" size="14" style="plain"/>
        
        <!-- Game UI fonts -->
        <font name="gameUI" family="Arial" size="12" style="plain"/>
        <font name="gameTitle" family="Arial" size="18" style="bold"/>
    </fonts>

    <!-- Color palette -->
    <colors>
        <!-- General UI Colors -->
        <color name="primary">#22223B</color>       <!-- Main background: dark blue-gray -->
        <color name="secondary">#4A4E69</color>     <!-- Secondary background: muted indigo -->
        <color name="accent">#9A8C98</color>        <!-- Accent color for highlights: soft mauve -->
        <color name="text">#F2E9E4</color>          <!-- Main text color: off-white -->
        <color name="danger">#C9ADA7</color>        <!-- For warnings/errors: pale rose -->
        <color name="success">#A3C9A8</color>       <!-- For success messages: light green -->
        
        <!-- Game Panel Colors -->
        <color name="gameBackground">#000000</color>      <!-- Game panel background: black -->
        
        <!-- Tile Colors -->
        <color name="tileWall">#555555</color>            <!-- Wall tiles: dark gray -->
        <color name="tileFloor">#CCCCCC</color>           <!-- Floor tiles: light gray -->
        <color name="tileStairsDown">#FFFF00</color>      <!-- Down stairs: yellow -->
        <color name="tileStairsUp">#FFA500</color>        <!-- Up stairs: orange -->
        <color name="tileEntrance">#FFC0CB</color>        <!-- Entrance marker: pink -->
        <color name="tileUnknown">#FF00FF</color>         <!-- Unknown tile types: magenta -->
        
        <!-- Player Colors -->
        <color name="playerBody">#00FFFF</color>          <!-- Player character: cyan -->
        <color name="playerBorder">#FFFFFF</color>        <!-- Player border: white -->
        
        <!-- Fog of War Colors -->
        <color name="fogUndiscovered">#000000F0</color>   <!-- Undiscovered areas: near-black with alpha -->
        <color name="fogDiscovered">#1E283C</color>       <!-- Discovered but not visible: blue-gray -->
        <color name="fogEdge">#14203E</color>             <!-- Edge of vision gradient: darker blue -->
        
        <!-- UI Panel Colors -->
        <color name="panelBackground">#000000</color>     <!-- Panel backgrounds: black -->
        <color name="panelBorder">#555555</color>         <!-- Panel borders: dark gray -->
        <color name="panelText">#FFFFFF</color>           <!-- Panel text: white -->
        <color name="panelHighlight">#FFFF00</color>      <!-- Panel highlights: yellow -->
        
    </colors>
</styling>